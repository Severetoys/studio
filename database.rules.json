
{
  "rules": {
    "facialAuth": {
      "users": {
        ".read": true,
        ".write": true,
        ".indexOn": ["email"]
      }
    },
    "admin": {
      "integrations": {
        ".read": true,
        ".write": true
      },
      "profileSettings": {
        ".read": true,
        ".write": true
      }
    },
    "payments": {
      ".read": true,
      ".write": true
    },
    "chats": {
      ".read": true,
      ".write": true,
      "$chatId": {
        "messages": {
          ".read": true,
          ".write": true
        }
      }
    },
    "reviews": {
       ".read": true,
       ".write": "auth != null",
       "$reviewId": {
         ".read": true,
         ".write": "auth != null"
       }
    }
  }
}
