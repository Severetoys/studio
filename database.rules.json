
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "secretChat": {
      "messages": {
        ".read": "auth != null",
        ".write": "auth != null && newData.child('senderId').val() == auth.uid && newData.child('text').val().length > 0"
      }
    },
    "facialAuth": {
       "users": {
          ".read": true, 
          ".indexOn": ["email"],
          "$userId": {
            ".write": true
          }
       }
    },
    ".read": false,
    ".write": false
  }
}

