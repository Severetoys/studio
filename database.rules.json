
{
  "rules": {
    "facialAuth": {
       "users": {
          ".read": true, 
          ".indexOn": ["email"],
          "$userId": {
            ".write": true
          }
       }
    },
    "admin": {
      "integrations": {
        ".read": "auth != null && auth.uid == 'YOUR_ADMIN_UID'",
        ".write": "auth != null && auth.uid == 'YOUR_ADMIN_UID'"
      }
    },
    ".read": false,
    ".write": false
  }
}
