
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products, photos, videos, and approved reviews
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (admin) can write
    }
    match /photos/{photoId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (admin) can write
    }
    match /videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (admin) can write
    }
     match /reviews/{reviewId} {
      allow read: if resource.data.status == 'approved';
      allow write: if true; // Allow anyone to submit a review
      allow update, delete: if request.auth != null; // Only admin can moderate
    }

    // Rules for the chat functionality
    match /chats/{chatId} {
      allow read, write: if true; // Allow anyone to create a chat session

      // Messages can be read and written by anyone within that chat
      match /messages/{messageId} {
        allow read, write: if true;
      }
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
