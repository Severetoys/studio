
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra padrão: Nega acesso a todos os documentos por padrão.
    match /{document=**} {
      allow read, write: if false;
    }

    // Permite leitura pública para fotos da galeria.
    match /photos/{photoId} {
      allow read: if true;
      allow write: if false; // A escrita deve vir do servidor de administração.
    }

    // Permite que qualquer um leia apenas as avaliações aprovadas.
    match /reviews/{reviewId} {
      allow read: if resource.data.status == 'approved';
      allow write: if false; // A escrita/moderação deve vir do servidor.
    }
    
    // Permite que usuários autenticados leiam produtos e vídeos.
    function isAuthenticated() {
      return request.auth != null;
    }

    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if false; // A escrita deve vir do servidor de administração.
    }

    match /videos/{videoId} {
      allow read: if isAuthenticated();
      allow write: if false; // A escrita deve vir do servidor de administração.
    }
    
    // Permite que usuários do chat leiam e escrevam mensagens em seus chats.
    match /chats/{chatId}/{message=**} {
        allow read, write: if request.auth != null;
    }
  }
}
