rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public content collections
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only for authenticated users (admin)
    }
    match /photos/{photoId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only for authenticated users (admin)
    }
    match /videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only for authenticated users (admin)
    }
    match /paymentButtons/{buttonId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only for authenticated users (admin)
    }

    // Chat collection
    match /chats/{chatId} {
      allow read, write: if true; // Allows anyone to create/update a chat document (for lastSeen, etc)

      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if true; // Allows anyone to read/write messages within a chat
      }
    }

    // Reviews collection
    // Allow public read access to reviews. 
    // Your app should filter for 'approved: true' on the client-side.
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only for authenticated users (admin)
    }

    // Visitor tracking collection
    match /visitorTracking/{document=**} {
      allow read, write: if true;
    }
  }
}