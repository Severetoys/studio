rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files. This is necessary for images
    // and videos to be displayed on your website to all visitors.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access (uploads, updates, deletes) to only authenticated users.
    // This prevents unauthorized uploads while allowing your admin panel's
    // server-side logic to upload files securely.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
