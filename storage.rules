
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regra padrão: Nega todo o acesso
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Permite leitura pública de todas as imagens e vídeos,
    // pois as URLs são usadas no site.
    match /italosantos.com/{allPaths=**} {
      allow read: if true;
    }

    // Permite escrita (upload) apenas para usuários autenticados.
    // Isso evita que usuários anônimos sobrecarreguem o storage.
    // As páginas de admin (upload, fotos, etc.) e o chat já usam autenticação.
    match /{path}/{fileName} {
        allow write: if request.auth != null;
    }
  }
}
